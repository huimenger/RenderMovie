.container{
    display: flex;
    flex-direction: column;
}
.head-image{
    width:100%;
    height: 400rpx;
}
.author-data{
    flex-direction: row;
    margin-top:20rpx;
    margin-left: 40rpx;
}
.audio{
    width: 102rpx;
    height: 110rpx;
    position: absolute;
    left: 50%;
    margin-left: -51rpx;
    top:180rpx;
    opacity: .6;
}
.avatar{
    height: 64rpx;
    width: 64rpx;
    vertical-align:middle;
}
.author{
    font-size:30rpx;
    font-weight:300;
    margin-left:20rpx;
    vertical-align: middle;
    color:#666;
}
.const-text,.date{
    font-size:24rpx;
    color:#999;
    margin-left:20rpx;
}
.title{
   font-size:36rpx; 
   margin-left:40rpx;
   margin-top:20rpx;
   font-weight: 700;
   letter-spacing: 2px;
   color: #4b556c;
}
.tool{
    margin-top:20rpx;
}
.circle-img{
    float: right;
    margin-right: 40rpx;
    vertical-align: middle;
}
.circle-img image{
    width:90rpx;
    height:90rpx;
}
.share-img{
    margin-left: 10rpx;
}
.horizon{
    width: 670rpx;
    height: 1px;
    background-color: #e5e5e5;
    vertical-align: middle;
    position: relative;
    top: 40rpx;
    margin: 0 auto;
    z-index: -99;
}
.detail{
    color: #666;
    margin-left: 30rpx;
    margin-top: 20rpx;
    margin-right: 30rpx;
    line-height: 44rpx;
    letter-spacing: 2px;
}