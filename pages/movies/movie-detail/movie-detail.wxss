/* pages/movies/movie-detail/movie-detail.wxss */
@import "../stars/stars-template.wxss";

.container{
    display: flex;
    flex-direction: column;
}
.head-img{
    width: 100%;
    height:320rpx;
    -webkit-filter: blur(20px);
}
.head{
    margin-top: 20px;
}
.img-hover{
    width: 100%;
    height: 320rpx;
    position: absolute;
    top:0;
    left: 0;
    display: flex;
    flex-direction: column
}
.text-title{
    font-size:19px;
    color: #fff;
    font-weight: bold;
    margin-left: 40rpx;
    letter-spacing: 2px;
}
.sub-title{
    font-size: 28rpx;
    color: #fff;
    margin-left: 40rpx;
    margin-top: 30rpx;
}
.like{
    display: flex;
    flex-direction: row;
    margin-top:30px;
    margin-left:40rpx;
}
.highlight-font{
    color: #f21146;
    font-size: 22rpx;
    margin-right: 10rpx;
}
.plain-font{
    color: #666;
    font-size: 22rpx;
    margin-right: 10rpx;
}
.movie-img{
    height: 238rpx;
    width: 175rpx;
    position: absolute;
    top:160rpx;
    right: 40rpx;
}
.summary{
    margin-top:40rpx;
    margin-left:40rpx;
    color:#777777;
}
.original-title{
    color:#1f3467;
    font-size:24rpx;
    font-weight: bold;
    margin-bottom:40rpx;
}
.flex-row{
    display: flex;
    flex-direction: row;
    margin-bottom: 10rpx;
}
.mark{
    margin-right: 30prx;
    color:#999;
    white-space: normal;
}
.hr{
    margin-top:45rpx;
    height: 1px;
    width:100%;
    background-color: #d9d9d9;
}
.synopsis{
    margin-left:40rpx;
    margin-top: 50rpx;
    display: flex;
    flex-direction: column;
}
.summary-title{
    color:#999;
}
.summary-content{
    margin-top:20rpx;
    margin-right: 40rpx;
    line-height: 40rpx;
    letter-spacing: 1px;
}
.mark{
    margin-right: 30rpx;
}
.cast{
    margin-top:20px;
    margin-left:40rpx;
    display: flex;
    flex-direction: column;
}
.cast-font{
    color:#999;
    margin-bottom: 40rpx;
}

.cast-container{
    margin-right: 40rpx;
    margin-bottom: 50rpx;
    text-align: center;
    width:170rpx;
    display: inline-flex;
    flex-direction: column;
    white-space: normal;
}
.cast-imgs{
    white-space: nowrap;
}
.cast-img{
    width:170rpx;
    height: 210rpx;
}
.cast-name{
    margin:10rpx auto 0;
    word-break: break-all;
}